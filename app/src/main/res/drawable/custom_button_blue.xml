<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <stroke android:width="2dip" android:color="#fff" />
            <gradient android:angle="-90" android:startColor="#0288D1" android:endColor="#0288D1" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <stroke android:width="2dip" android:color="#ffff" />
            <solid android:color="#01579B" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <stroke android:width="2dip" android:color="#fff" />
            <gradient android:angle="-90" android:startColor="#01579B" android:endColor="#01579B" />
        </shape>
    </item>
</selector>